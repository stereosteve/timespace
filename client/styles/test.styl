body
  color #555
  padding: 0
  margin: 0

.TimeGrid
  position relative
  background #f7f7f7
  height 2500px

  .TimeAxis
    position relative
    height 100%
    width: 100px
    background: #ccc
    border-right 1px solid #333

  .TimePoint
    position absolute
    top 150px
    border-top: 1px solid #333
    margin-left: 100px
    padding: 10px
