*
  margin 0
  padding 0

body
  background #999
  color #555
  min-height 100%


.TopbarView
  position fixed
  top: 0
  left: 0
  width: 100%
  height 50px
  border-bottom 1px solid #333
  background white
  z-index 1
  opacity 0.5

  &:hover
    opacity 1

  .controls
    padding 10px
    float right

    .slider
      width 150px

.TimelineView
  position relative
  //top: 50px
  height: 220px
  background #f7f7f7

.AxisView
  height 100%
  width: 100px
  background: #ccc
  border-right 1px solid #333



.EventView
  position absolute
  border-top: 1px solid #333
  left: 100px
  top: 140px
  padding: 10px

  .title
    font-weight: bold



.RaphControls
  position fixed
  top 0px
  right 0px
  width 300px
  height 350px
  background #ccf
  padding 10px
