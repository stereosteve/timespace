*
  margin 0
  padding 0

body
  color #555
  min-height 100%


.TopbarView
  position fixed
  top: 0
  left: 0
  width: 100%
  height 50px
  border-bottom 1px solid #333
  background white
  z-index 1
  opacity 0.5

  &:hover
    opacity 1

  .controls
    padding 10px
    float right

    .slider
      width 150px

.TimelineView
  position relative
  //top: 50px
  background #f7f7f7

.AxisView
  height 100%
  width: 100px
  background: #ccc
  border-right 1px solid #333

  .AxisLabel
    position absolute
    width: 100px
    text-align: center
    font-weight bold

.MinimapView
  position fixed
  right: 0
  top: 0
  width 120px
  background green
  height 100%

.EventView
  position absolute
  border-top: 1px solid #333
  left: 100px
  top: 140px
  padding: 10px

  .title
    font-weight: bold



.RaphControls
  float right
  width 300px
  height 50px
  background #ccc
  padding 10px
.Axis
  position fixed
  top: 0
  left: 0
  height: 100%
  width: 140px
  border-right: 1px solid red