*
  margin 0
  padding 0

body
  color #555

.Timeline
  position relative
  background #f7f7f7

  .Axis
    height 100%
    width: 100px
    background: #ccc
    border-right 1px solid #333

    .AxisLabel
      position absolute
      width: 100px
      text-align: center
      font-weight bold

  .controls
    position fixed
    top 0
    right 0
    width 200px
    height 200px
    padding 10px
    background #ccf

  .TimePoint
    position absolute
    border-top: 1px solid #333
    margin-left: 100px
    padding: 10px

    .title
      font-weight: bold
